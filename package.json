{
  "name": "thunderdome-judging",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "dev": "pnpm -r --parallel --filter web --filter api dev",
    "lint": "pnpm -r --filter web --filter api lint",
    "typecheck": "pnpm -r --filter web --filter api typecheck",
    "build": "pnpm -r --filter web --filter api build",
    "test": "pnpm -r --filter web --filter api test",
    "db:generate": "pnpm --filter @thunderdome/api exec -- prisma generate",
    "db:migrate:dev": "pnpm --filter @thunderdome/api exec -- prisma migrate dev --name init",
    "db:migrate:deploy": "pnpm --filter @thunderdome/api exec -- prisma migrate deploy"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "typescript": "5.5.4",
    "vitest": "^1.6.0"
  }
}
