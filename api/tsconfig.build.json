{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": [],                         // strip vitest/globals from build
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
